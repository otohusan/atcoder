{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "母",
      "command": "/usr/local/bin/g++-13",
      "args": [
        "-fdiagnostics-color=always",
        "${file}",
        "-o",
        "${workspaceFolder}/problem", // 出力ファイル名を problem に指定
        "&&",
        "${workspaceFolder}/problem",
        "<",
        "${workspaceFolder}/sample.txt"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "コンパイラ: /usr/bin/g++"
    }
  ]
}
